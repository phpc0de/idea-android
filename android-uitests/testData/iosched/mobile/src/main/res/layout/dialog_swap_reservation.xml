<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.google.samples.apps.iosched.ui.reservation.SwapReservationViewModel" />

    </data>

    <LinearLayout
        style="@style/Widget.IOSched.Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/margin_large"
            android:paddingHorizontal="@dimen/margin_large"
            android:text="@string/swap_reservation_title"
            android:textAppearance="@style/TextAppearance.IOSched.DialogTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:paddingHorizontal="@dimen/margin_large"
            android:textAppearance="@style/TextAppearance.IOSched.DialogContent"
            app:fromTitle="@{viewModel.fromTitle}"
            app:toTitle="@{viewModel.toTitle}"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.IOSched.BorderlessButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_normal"
                android:onClick="@{() -> viewModel.onCancelClicked()}"
                android:text="@string/cancel" />

            <Button
                style="@style/Widget.IOSched.RaisedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:onClick="@{() -> viewModel.onSwapClicked()}"
                android:text="@string/swap" />

        </LinearLayout>

    </LinearLayout>

</layout>
