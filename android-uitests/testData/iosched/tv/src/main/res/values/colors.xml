<resources>
    <!--
    ~    These colors are copied from mobile, however some are adjusted to a darker contrast for a
    ~    better experience for a TV. For more information on why the color palette is darker on TV
    ~    than mobile, desktop, and other surfaces, checkout the material guidelines for testing
    ~    colors across devices.
    ~    https://designguidelines.withgoogle.com/android-tv/style/color.html#color-testing-colors
    -->

    <!-- Overriding primary palette with darker hues. -->
    <color name="indigo">#3c54fe</color>
    <color name="indigo_dark">#303F9F</color>

    <!--
    ~    White on TV should not be pure white. For more information, check out the material
    ~    guidelines for TV white.
    ~    https://designguidelines.withgoogle.com/android-tv/style/color.html#color-tv-white
    -->
    <color name="white">#eee</color>

    <color name="text_color_tertiary">#dadce0</color>
    <color name="light_grey">#e6e6e6</color>
    <color name="default_tag_color">#999</color>
    <color name="scrim">#33ffffff</color> <!-- 20% white -->

    <color name="background_gradient_start">@color/indigo</color>
    <color name="background_gradient_end">@color/indigo_dark</color>

</resources>
