<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorAccent">#ffff5722</item>
        <item name="android:colorPrimary">#ffff5722</item>
        <item name="android:colorPrimaryDark">#ffbf360c</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:navigationBarColor">@android:color/darker_gray</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>
    <style name="ThemeOverlay.AccentSecondary" parent="android:ThemeOverlay.Material">
        <item name="android:colorAccent">#1141caca</item>
    </style>
</resources>
