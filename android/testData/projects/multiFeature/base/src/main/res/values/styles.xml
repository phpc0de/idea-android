<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="DrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#ffffffff</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarStyle.Text</item>
        <item name="android:background">@color/primary</item>
        <item name="drawerArrowStyle">@style/DrawerArrow</item>
    </style>

    <style name="ToolbarStyle.Text" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
