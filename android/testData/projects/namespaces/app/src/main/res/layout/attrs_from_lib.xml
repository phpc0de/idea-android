<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:other="http://schemas.android.com/apk/res/com.example.otherlib"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="One"
        android:textColor="?app_color"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Two"
        android:textColor="?com.example.lib:lib_color"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Three"
        android:textColor="?other:other_color"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
