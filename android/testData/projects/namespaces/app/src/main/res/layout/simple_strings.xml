<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:other="http://schemas.android.com/apk/res/com.example.otherlib"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/hello_world"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@color/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@com.example.lib:string/lib_string"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@com.example.lib:color/lib_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@other:string/lib_string"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@other:color/other_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
