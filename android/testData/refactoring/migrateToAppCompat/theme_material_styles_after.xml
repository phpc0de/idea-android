<resources>
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorAccent">#ffff5722</item>
    <item name="colorPrimary">#ffff5722</item>
    <item name="colorPrimaryDark">#ffbf360c</item>
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
    <item name="android:navigationBarColor">@android:color/darker_gray</item>
    <item name="background">?attr/selectableItemBackground</item>
  </style>
  <style name="ThemeOverlay.AccentSecondary" parent="ThemeOverlay.AppCompat">
    <item name="colorAccent">@color/accent_secondary</item>
  </style>
</resources>
